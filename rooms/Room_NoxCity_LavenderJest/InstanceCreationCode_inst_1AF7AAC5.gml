sprite_index = spr_LavenderIdle;

var Name = "Lavender"; 

Speech[0] = Name + ": Greetings Rose";
Speech[1] = Name + ": I hope that you are prepared for your duty as " + global.Title;
Speech[2] = Name + ": As of now, I am training your brother to help you fight";
Speech[3] = Name + ": The idea of sending two of my beloved children to battle scares me";
Speech[4] = Name + ": But for the sake of the Noxian people, I must do what's necessary";
Speech[5] = Name + ": Please do not fear, you both are strong, and I believe in your power";